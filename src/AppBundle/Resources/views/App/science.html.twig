{% extends "AppBundle::base.html.twig" %}

{% block content %}
   <div class="jumbotron">
    <div class="container">
        <h1>Sciences</h1>
    </div>
</div>

<div class="container">
    <h2>Liste des sciences</h2>
    <hr>

    {% for science in sciences %}
    {% set science_path = path('app_science_detail', {'scienceId': science.id}) %}

    <div class="science-thumb">
        <h3>{{ science.title }}</h3>
        <div>
            <p>
                {{ science.description }}
            </p>
            <p>
                <!-- Lien vers la page dÃ©tail science -->
                <a href="{{ science_path }}"
                   class="btn btn-sm btn-default">
                    Voir les publications de la science &laquo;{{ science.title }}&raquo;
                </a>
            </p>
        </div>
    </div>
    {% endfor %}

</div>


{% endblock content %}

